{% trans_default_domain 'FOSUserBundle' %}

{% extends "base.html.twig" %}

{% block body %}
    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Alterar senha</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-lg-3 col-md-6">
                    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                    {% for error in form.vars.errors.form.getErrors(true) %}
                        <div class="alert alert-danger">
                            {{ error.message }}
                        </div>
                    {% endfor %}
                    <fieldset>
                        <div class="form-group">
                            <input class="form-control" name="fos_user_change_password_form[current_password]" placeholder="Senha atual" type="password" required="required">
                        </div>
                        <div class="form-group">
                            <input class="form-control" name="fos_user_change_password_form[plainPassword][first]" placeholder="Nova senha" type="password" required="required">
                        </div>
                        <div class="form-group">
                            <input class="form-control" name="fos_user_change_password_form[plainPassword][second]" placeholder="Repita senha" type="password" required="required">
                        </div>
                        <input type="submit" id="_submit" name="_submit" value="Alterar senha" class="btn btn-lg btn-success btn-block" />
                    </fieldset>
                    {{ form_widget(form._token) }}
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
{% endblock body %}
