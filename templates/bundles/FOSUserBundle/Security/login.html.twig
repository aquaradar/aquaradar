{% trans_default_domain 'FOSUserBundle' %}

{% extends "base_basic.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Login</h3>
                    </div>
                    <div class="panel-body">
                        {% if error %}
                            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <form role="form" action="{{ path("fos_user_security_check") }}" method="post">
                            {% if csrf_token %}
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            {% endif %}
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" name="_username" placeholder="Username" value="{{ last_username }}" type="text" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" name="_password" placeholder="Password" type="password" value="">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="_remember_me" value="on" type="checkbox">Remember Me
                                    </label>
                                </div>
                                <input type="submit" id="_submit" name="_submit" value="Login" class="btn btn-lg btn-success btn-block" />
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}