{% extends 'base.html.twig' %}

{% block title %}Home - {{ parent() }}{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="/notification.js"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Notificação</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <div class="row">
                <div class="col-lg-6">
                    {% if app.session.flashBag.has('success') %}
                        <div class="alert alert-success alert-dismissable">
                            {% for msg in app.session.flashBag.get('success') %}
                                {{ msg }}
                            {% endfor %}
                        </div>
                    {% endif %}
                    {{ form_start(form, {'attr' : {'role' : 'form'}}) }}
                        <div class="form-group {{ form_errors(form.address) is not empty ? 'has-error' }}">
                            {{ form_label(form.address) }}
                            {{ form_widget(form.address, {'attr' : {'class' : 'form-control'}}) }}
                            {% if form_errors(form.address) is not empty %}
                                <label class="control-label">{{ form_errors(form.address) }}</label>
                            {% endif %}
                        </div>
                        <div class="form-group {{ form_errors(form.type) is not empty ? 'has-error' }}">
                            {{ form_label(form.type) }}
                            {{ form_widget(form.type, {'attr' : {'class' : 'form-control'}}) }}
                            {% if form_errors(form.type) is not empty %}
                                <label class="control-label">{{ form_errors(form.type) }}</label>
                            {% endif %}
                        </div>
                        {{ form_widget(form.send, {'attr' : {'class' : 'btn btn-default'}}) }}
                    {{ form_end(form) }}
                </div>
                <div class="col-lg-6">
                    {% include 'notification/common/widget_alerts.html.twig' %}
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
{% endblock %}