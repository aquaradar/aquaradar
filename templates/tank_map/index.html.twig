{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        #radarMap {
            height: 700px;
        }
        #legend {
            font-family: Arial, sans-serif;
            background: #fff;
            padding: 10px;
            margin: 10px;
            border: 3px solid #000;
        }
        #legend h3 {
            margin-top: 0;
        }
        #legend img {
            vertical-align: middle;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Mapa</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-xs-12">
                    <div id="radarMap">Carregando mapa...</div>
                    <div id="legend"><h3>Legenda</h3></div>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
    <script>
        var map;
        function initMap() {
            map = new google.maps.Map(document.getElementById('radarMap'), {
                zoom: 13,
                center: {lat: -22.3176761, lng: -49.0691349}
            });

            var icons = {
                tank: {
                    name: 'Reservatórios',
                    image: '{{ absolute_url(asset('map/reservatoriomedio.png')) }}'
                }
            };
            
            var i=0;
            {% for marker in tankMarkers %}
                i++;
                var contentString = '<div id="content">'+
                    '<div id="siteNotice">'+
                    '</div>'+
                    '<h1 id="firstHeading" class="firstHeading">{{ marker.name}}</h1>'+
                    '<div id="bodyContent">'+
                    '<p>{{ marker.address}}</p>'+
                    '<p>Nível do reservatório: <b>{{ marker.level}}%</b></p>'+
                    '</div>'+
                    '</div>';

                var infowindow = new google.maps.InfoWindow();
                
                
                newValue = new google.maps.Marker({
                    position: { lat: {{ marker.latitude }}, lng: {{ marker.longitude }} },
                    map: map,
                    icon: icons.tank.image,
                    type: 'reservatorio'
                });
                google.maps.event.addListener(newValue, 'click', (function(newValue, i) {
                    return function() {
                      infowindow.setContent(contentString);
                      infowindow.open(map, newValue);
                    }
                })(newValue, i));                
            {% endfor %}
            
            
            var legend = document.getElementById('legend');
            for (var key in icons) {
                var type = icons[key];
                var name = type.name;
                var icon = type.image;
                var div = document.createElement('div');
                div.innerHTML = '<img src="' + icon + '"> ' + name;
                legend.appendChild(div);
            }

            map.controls[google.maps.ControlPosition.RIGHT_BOTTOM].push(legend);
        }
    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCai41x2wQ6DF0HqF8R552eED4R7s1m1EU&callback=initMap">
    </script>
{% endblock body %}
